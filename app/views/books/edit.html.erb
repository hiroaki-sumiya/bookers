<p class="notice"><%= flash[:notice] -%></p>
<h1>Editing Book</h1>
<% if @error %>
  <div class="error">
    <h2><%= @book.errors.count -%> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message -%></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book, url: update_path(@book.id),method: :patch do |f| %>
  <div class="field">
    <label>タイトル</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>本文</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
<% end %>
<br>
<%= link_to 'Show' , book_path(@book.id) -%>
<span> | </span>
<%= link_to 'Back' , books_path -%>