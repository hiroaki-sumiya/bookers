<p class="notice"><%= flash[:notice] -%></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
      <tr>
        <td><%= b.title -%></td>
        <td><%= b.body -%></td>
        <td><%= link_to 'Show' , book_path(b.id) -%></td>
        <td><%= link_to 'Edit' , edit_book_path(b.id) -%></td>
        <td><%= link_to "Destroy", destroy_path(b.id), method: :delete, 'data-confirm': 'Are you sure?' -%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<% if @error %>
  <div class="error">
    <h2><%= @book.errors.count -%> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book do |f| %>
  <div class="field">
    <label>タイトル</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>本文</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>